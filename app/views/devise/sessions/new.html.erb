<div class="max-w-sm	mx-auto">
  <div class="mb-10">
    <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
        Login to your account
    </h2>
    <p class="mt-2 text-center text-sm text-gray-600 mt-5">
      Don't have an account yet?
      <%= link_to "Sign up", new_registration_path(resource_name), class: "font-medium text-blue-600 hover:text-blue-500" %>
    </p>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "mt-8 space-y-6", data: { turbo: false }) do |f| %>
    <div class="-space-y-px">
      <div class="field my-5">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Enter email",
            class: 'rounded-md appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 sm:text-sm' %>
        <span class="text-error"><%= resource.errors[:email].join(", ") %></span>
      </div>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "Enter password",
          class: 'rounded-md appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 sm:text-sm' %>
      <span class="text-error"><%= resource.errors[:password].join(", ") %></span>
    </div>

    <div class="flex items-center justify-between mt-2 ">
      <% if devise_mapping.rememberable? %>
        <div class="flex items-center">
          <%= f.check_box :remember_me, class: 'h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded' %>
          <%= f.label :remember_me, class: 'ml-2 block text-sm text-gray-900' %>
        </div>
      <% end %>

      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <div class="text-sm">
          <%= link_to "Forgot your password?", new_password_path(resource_name), class: "font-medium text-blue-600 hover:text-blue-500" %><br />
        </div>
      <% end %>
    </div>

    <div class="actions px-10">
      <%= f.submit "Log in", class: "group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 mt-10" %>
    </div>
  <% end %>
</div>

